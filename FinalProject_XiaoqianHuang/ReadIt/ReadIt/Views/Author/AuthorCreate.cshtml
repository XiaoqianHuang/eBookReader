@model ReadIt.Models.Author

@{
    ViewData["Title"] = "AuthorCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Author</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AuthorCreate" asp-controller="Author">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="AuthorIntro" class="control-label"></label>
              <textarea asp-for="AuthorIntro" class="form-control" style="width:600px; height:250px; overflow:auto; text-align:start;"></textarea>
              <span asp-validation-for="AuthorIntro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="blackbtn btn" />
            </div>
        </form>
    </div>
</div>

<div>
  <a asp-action="AuthorIndex" asp-controller="Author">Back to Author List</a> |
  <a asp-action="Index" asp-controller="Home">Back to Bookshelf</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
