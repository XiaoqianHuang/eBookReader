@model ReadIt.Models.Author

@{
    ViewData["Title"] = "AuthorDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Author</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorIntro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorIntro)
        </dd>
    </dl>
    
    <form asp-action="AuthorDelete" asp-controller="Author">
      <input type="hidden" asp-for="AuthorId" />
      <input type="submit" value="Delete" class="btn btn-danger" /> | 
      <a asp-action="AuthorIndex" asp-controller="Author">Back to Author List</a> | 
      <a asp-action="Index" asp-controller="Home">Back to Bookshelf</a>
    </form>
</div>
