@model IEnumerable<ReadIt.Models.Category>

@{
  ViewData["Title"] = "CategoryIndex";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>

<p>
  <a asp-action="CategoryCreate" asp-controller="Category">Add New Category</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.CategoryName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.CategoryIntro)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          <a asp-action="CategoryDetails" asp-controller="Category" asp-route-id="@item.CategoryId">@item.CategoryName</a>
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CategoryIntro)
        </td>
        <td>
          <a asp-action="CategoryEdit" asp-controller="Category" asp-route-id="@item.CategoryId">Edit</a> |
          <a asp-action="CategoryDetails" asp-controller="Category" asp-route-id="@item.CategoryId">Details</a> 
        </td>
      </tr>
    }
  </tbody>
</table>

