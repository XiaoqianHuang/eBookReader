@model ReadIt.Models.Category

@{
    ViewData["Title"] = "CategoryEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Category</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="CategoryEdit" asp-controller="Category">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group">
          <label asp-for="CategoryName" class="control-label"></label>
          <input asp-for="CategoryName" class="form-control" />
          <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CategoryIntro" class="control-label"></label>
          <input asp-for="CategoryIntro" class="form-control" />
          <span asp-validation-for="CategoryIntro" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Save" class="blackbtn btn" />
        </div>
      </form>
    </div>
</div>

<div>
  <a asp-action="CategoryIndex" asp-controller="Category">Back to Category List</a> | 
  <a asp-action="Index" asp-controller="Home">Back to Bookshelf</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
