@model ReadIt.Models.Document

@{
    ViewData["Title"] = "DeleteDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Authority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Authority)
        </dd>
        <dt class = "col-sm-2">
            Details
        </dt>
        <dd class = "col-sm-10">
          <a asp-action="ReadDocument" asp-controller="Home" asp-route-id="@Model.DocumentId">Read</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentIntro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DocumentIntro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadUserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadUserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdateTime)
        </dd>
    </dl>
    
    <form asp-action="DeleteDocument" asp-controller="Home">
        <input type="hidden" asp-for="DocumentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Home">Back to Bookshelf</a>
    </form>
</div>
